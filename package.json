  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.1.1",
    "jest": "^28.1.3",
    "ts-jest": "^29.0.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
